<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Network Test Tool</title>
</head>
<body>
    <h1>Network Test Tool</h1>
    <label for="ip_address">Enter IP Address:</label>
    <input type="text" id="ip_address" name="ip_address">
    <button onclick="performPing()">Ping Test</button>
    <div id="pingResult"></div>

    <script>
        function performPing() {
            var ipAddress = document.getElementById('ip_address').value;
            fetch('/ping', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ ip_address: ipAddress })
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById('pingResult').innerText = data.ping_result;
            })
            .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>
